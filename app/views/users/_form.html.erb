<%= form_with(model: @user, local: true, html: { class: 'user-form' }) do |form| %>
  <div class="form-group">
    <%= form.text_field :name, class: 'form-control', placeholder: 'Enter your name', required: true %>
  </div>

  <div class="form-group">
    <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email', required: true %>
  </div>

  <div class="form-group">
    <%= form.text_field :phone_number, class: 'form-control', placeholder: 'Enter your phone number', required: true %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create User', class: 'btn btn-primary' %>
  </div>
<% end %>